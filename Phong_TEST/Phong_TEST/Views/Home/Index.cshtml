                <p>Check-in Date<span>*</span></p>
                <div class="infos">
                    <input type="date" name="" class="criteria">
                </div>
            </div>
            <div class="col-xl-2 col-lg-4 col-md-6 col-sm-12 col-12 item item-lg">
                <p>Check-out Date<span>*</span></p>
                <div class="infos">
                    <input type="date" name="" class="criteria">
                </div>
            </div>
            <div class="col-xl-2 col-lg-4 col-md-6 col-sm-12 col-12 item item-lg">
                <p>Guest<span>*</span></p>
                <div class="infos">
                    <input type="text" name="" class="criteria">
                </div>
            </div>
            <div class="col-xl-2 col-lg-4 col-md-6 col-sm-12 col-12 item item-lg">
                <p style="color: transparent;">A</p>
                <div class="infos">
                    <input type="submit" name="" value="BOOK NOW" class="criteria sub-btn">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end carousel banner -->
<!-- welcome -->
<div class="container-fluid welcome">
    <div class="container words">
        <p class="title">Welcome to the Lake Inn!</p>
