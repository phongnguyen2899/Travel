@model IEnumerable<EF.Entiti.Article>

@foreach (var item in Model)
{
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
        <div class="itemBox">
            <div class="item">
                <div class="img" style="background-image: url(/ACcessClient/img/@item.Image);"></div>
                <div class="slice"></div>
                <p class="info-title">@item.NameArticle</p>
                <p class="time">@item.CreateDate<span><i class="fas fa-comment"></i> 0</span></p>
                <div class="slice"></div>
                <p class="detail">
                    @{ 
                        var detail = "";
                    }
                   @{ 
                       if (item.Decriptions!=null)
                       {
                            detail = item.Decriptions.Substring(0, item.Decriptions.Length/3);
                       }
                   }
                    @detail
                </p>
                <p class="more"><a href="@Url.Action("Detail","Blog",new { id = item.ID })">Read More</a></p>
            </div>
        </div>
    </div>
}
