@model IEnumerable<EF.Entiti.Company>

@{
    ViewBag.Title = "GetAllCompany";
    Layout = "~/Areas/Area/Views/Shared/_Layout.cshtml";
}
<style>
    .img {
        max-width: 100px;
    }
</style>

<h2>GetAllCompany</h2>

@if(ViewBag.check==true){
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCompany)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HotLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameCompany)
            </td>
            <td>
                <img class="img" src="~/Accsess/Image/Logo/@item.Logo" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
            </td>
        </tr>
    }

</table>
